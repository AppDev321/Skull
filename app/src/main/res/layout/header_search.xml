<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/color_tab_bars"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"

        android:background="@color/color_tab_bars"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:visibility="visible">

        <ImageView
            android:id="@+id/btn_search_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@drawable/btn_hower"
            android:src="@drawable/ic_back"
            android:tint="@color/white" />

        <com.skull.views.CustomEditText
            android:id="@+id/edit_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-&apos;"
            android:hint="Search"
            android:imeOptions="actionDone"
            android:maxLength="15"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/light_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/_14sdp"></com.skull.views.CustomEditText>

        <ImageView
            android:id="@+id/btn_search_cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:src="@drawable/ic_search_cross"
            android:background="@drawable/btn_hower"
            android:tint="@color/white" />
    </LinearLayout>
</RelativeLayout>